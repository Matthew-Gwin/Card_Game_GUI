<Window x:Class="Card_Game_GUI.Card_Game_Controller.PlayerViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Card_Game_GUI.Card_Game_Controller"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="300" Width="500">
    <Grid>
        <Label Content="Score:" HorizontalAlignment="Left" Margin="141,35,0,0" VerticalAlignment="Top"/>
        <Label Content="Hand:" HorizontalAlignment="Left" Margin="142,70,0,0" VerticalAlignment="Top"/>
        <Grid>
            <Button Click ="GameHit" Content="Hit" HorizontalAlignment="Left" Margin="37,48,0,0" VerticalAlignment="Top" Width="34"/>
            <Button Click ="GameStand" Content="Stand" HorizontalAlignment="Left" Margin="37,110,0,0" VerticalAlignment="Top"/>
            <Button Click="GameLeave" Content="Leave" HorizontalAlignment="Left" Margin="37,169,0,0" VerticalAlignment="Top"/>
            <TextBox Name ="Score" HorizontalAlignment="Left" Margin="183,39,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
            <TextBox Name ="Hand" HorizontalAlignment="Left" Margin="183,74,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        </Grid>
    </Grid>
</Window>
